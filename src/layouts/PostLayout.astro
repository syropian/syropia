---
import type { CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";

type Props = CollectionEntry<"posts">["data"];

const props = Astro.props;

const publishedAt = props.publishedAt.toLocaleDateString("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const meta = {
  title: props.title,
  description: props.description,
  publishedAt: props.publishedAt,
  type: "article",
};
---

<Layout meta={meta}>
  <article
    class="mt-8 prose prose-slate dark:prose-invert dark:prose-p:text-gray-300"
  >
    <small
      class="block mb-2 text-sm font-semibold tracking-wider text-gray-500 uppercase dark:text-gray-400"
      >{publishedAt}</small
    >
    <h1 class="text-2xl sm:text-4xl">{props.title}</h1>
    <slot />
  </article>
</Layout>
