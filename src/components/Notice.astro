---
export interface Props {
  type?: "info" | "warning";
}

const { type = "info" } = Astro.props;
---

<div
  class:list={[
    "p-4 border-l-4 prose-p:my-0 prose-code:text-blue-900 rounded-tr-lg rounded-br-lg",
    {
      "border-blue-400 bg-blue-100": type === "info",
      "border-yellow-400 bg-yellow-100": type === "warning",
    },
  ]}
>
  <div class="flex">
    <div class="flex-shrink-0">
      {
        type === "info" && (
          <svg
            class="w-5 h-5 text-blue-400 mt-0.5"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
              clip-rule="evenodd"
            />
          </svg>
        )
      }
      {
        type === "warning" && (
          <svg
            class="w-5 h-5 text-yellow-400"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"
            />
          </svg>
        )
      }
    </div>
    <div class="ml-3">
      <span class="sr-only">Note</span>
      <div
        class:list={[
          "mt-0 mb-0 leading-relaxed",
          {
            "text-blue-900": type === "info",
            "text-yellow-900": type === "warning",
          },
        ]}
      >
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  code {
    background-color: #f3f4f6;
    border-radius: 0.25rem;
    padding: 0.1rem 0.25rem;
  }
</style>
